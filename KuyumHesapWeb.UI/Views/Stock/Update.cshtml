@using KuyumHesapWeb.Core.Feature.StockFeature.Commands.Dtos
@model StockForGetStockTypeResponseDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stok Tanımlama</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'rolex-green': '#4C9779',
                        'list-item-bg': '#F0FAFA',
                        'success': '#22c55e',
                        'danger': '#ef4444',
                        'secondary': '#6b7280',
                    },
                    keyframes: {
                        'fade-in-out': {
                            '0%': { opacity: '0', transform: 'translateY(10px)' },
                            '10%': { opacity: '1', transform: 'translateY(0)' },
                            '90%': { opacity: '1', transform: 'translateY(0)' },
                            '100%': { opacity: '0', transform: 'translateY(10px)' },
                        },
                    },
                    animation: {
                        'fade-in-out': 'fade-in-out 3s ease-in-out forwards',
                    },
                }
            }
        }
    </script>
    <style>
        .form-group .form-label {
            position: absolute;
            top: 0.5rem;
            left: 0.6rem;
            color: #6b7280;
            pointer-events: none;
            transition: all 0.2s ease-in-out;
            background-color: white;
            padding: 0 0.25rem;
            font-size: 0.875rem; /* 14px */
        }

        .form-group .form-input:focus + .form-label,
        .form-group .form-input:not(:placeholder-shown) + .form-label,
        .form-group .form-input.has-value + .form-label {
            top: -0.6rem;
            left: 0.5rem;
            font-size: 0.75rem; /* 12px */
            color: #1f2937;
        }

        .form-input:required:invalid {
            color: #6b7280;
        }
    </style>
</head>
<body class="bg-gray-100 p-3 overflow-hidden">

    <div class="flex flex-col md:flex-row gap-4 w-full h-[calc(100vh-1.5rem)]">

        <!-- SOL TARAF: FORM PANELİ -->
        <div class="flex flex-col flex-[3]">
            <div class="panel bg-white rounded-lg shadow-sm border border-rolex-green p-4 flex flex-col flex-grow min-h-0">
                <h2 class="text-lg font-semibold text-gray-800 mb-4 pb-2 border-b border-rolex-green flex-shrink-0">Stok Tanımlama</h2>
                <div class="flex-grow overflow-y-auto pr-3 -mr-3">
                    <form asp-controller="Stock" asp-action="Update" class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-4 mt-2">
                        <input type="hidden" asp-for="UpdateStockCommandRequest.Id">

                        <div class="relative form-group md:col-span-2">
                            <input type="text" id="stokAdi" asp-for="UpdateStockCommandRequest.StockName" required class="form-input text-sm mt-1 block w-full p-2 border border-rolex-green rounded-md shadow-sm focus:border-black focus:ring-0 peer" placeholder=" ">
                            <label for="stokAdi" class="form-label">Stok Adı</label>
                        </div>

                        <div class="relative form-group">
                            <select id="stokTipID" asp-for="UpdateStockCommandRequest.StockTypeId" required class="form-input text-sm mt-1 block w-full p-2 border border-rolex-green rounded-md shadow-sm focus:border-black focus:ring-0">
                                @foreach (var item in Model.getAllStockTypeQueryResponses)
                                {
                                    <option value="@item.Id">@item.StockTypeName</option>
                                }
                            </select>
                            <label for="stokTipID" class="form-label">Stok Tipi</label>
                        </div>

                        <div class="relative form-group">
                            <input type="text" id="grupAdi" asp-for="UpdateStockCommandRequest.GroupId" class="form-input text-sm mt-1 block w-full p-2 border border-gray-300 bg-gray-100 rounded-md shadow-sm peer" placeholder=" " readonly>
                            <label for="grupAdi" class="form-label">Stok Grubu (Otomatik)</label>
                            <input type="hidden" id="grupID">
                        </div>

                        <div class="relative form-group">
                            <select id="birim" required asp-for="UpdateStockCommandRequest.UnitName" class="form-input text-sm mt-1 block w-full p-2 border border-rolex-green rounded-md shadow-sm focus:border-black focus:ring-0">
                                <option value="" disabled selected>Birim Seçiniz</option>
                                <option value="Gram">Gram</option>
                                <option value="Adet">Adet</option>
                                <option value="Carat">Carat</option>
                            </select>
                            <label for="birim" class="form-label">Birim</label>
                        </div>

                        <div class="relative form-group">
                            <input type="text" id="stokBirimiAdi" asp-for="UpdateStockCommandRequest.StockUnitId" class="form-input text-sm mt-1 block w-full p-2 border border-gray-300 bg-gray-100 rounded-md shadow-sm peer" placeholder=" " readonly>
                            <label for="stokBirimiAdi" class="form-label">Stok Birimi (Otomatik)</label>
                            <input type="hidden" id="stokBirimi">
                        </div>

                        <div class="relative form-group">
                            <select id="iscilikBirimi" required asp-for="UpdateStockCommandRequest.LaborUnitId" class="form-input text-sm mt-1 block w-full p-2 border border-rolex-green rounded-md shadow-sm focus:border-black focus:ring-0">
                                <option value="" disabled selected>İşçilik Birimi Seçiniz</option>
                            </select>
                            <label for="iscilikBirimi" class="form-label">İşçilik Birimi</label>
                        </div>

                        <div class="relative form-group">
                            <input type="text" id="milyem" required asp-for="UpdateStockCommandRequest.MillRate" class="form-input text-sm mt-1 block w-full p-2 border border-rolex-green rounded-md shadow-sm focus:border-black focus:ring-0 peer" placeholder=" ">
                            <label for="milyem" class="form-label">Milyem</label>
                        </div>

                        <div class="border border-rolex-green rounded-md p-2 flex items-center justify-between md:col-span-2">
                            <span class="text-xs font-medium text-gray-700">Aktif</span>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" asp-for="UpdateStockCommandRequest.IsActive" id="aktif" class="sr-only peer" checked>
                                <div class="w-9 h-5 bg-gray-200 rounded-full peer peer-focus:ring-2 peer-focus:ring-rolex-green peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-rolex-green"></div>
                            </label>
                        </div>

                    </form>
                </div>

            </div>
        </div>

        <!-- SAĞ TARAF: LİSTE PANELİ -->

    </div>

    <!-- Silme Onay Modalı -->


    <div id="toast-container" class="fixed bottom-4 right-4 z-50"></div>

</body>
</html>
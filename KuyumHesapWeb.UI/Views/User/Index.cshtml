@using KuyumHesapWeb.Core.Feature.UserFeature.Queries.GetAll
@model List<GetAllUserQueryResponse>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Yönetimi</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'rolex-green': '#4C9779',
                        'list-item-bg': '#F0FAFA',
                        'success': '#22c55e',
                        'danger': '#ef4444',
                        'secondary': '#6b7280',
                    },
                    keyframes: {
                        'fade-in-out': {
                            '0%': { opacity: '0', transform: 'translateY(10px)' },
                            '10%': { opacity: '1', transform: 'translateY(0)' },
                            '90%': { opacity: '1', transform: 'translateY(0)' },
                            '100%': { opacity: '0', transform: 'translateY(10px)' },
                        },
                    },
                    animation: {
                        'fade-in-out': 'fade-in-out 3s ease-in-out forwards',
                    },
                }
            }
        }
    </script>
    <style>
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: #aaa;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #888;
            }

        .form-group .form-label {
            position: absolute;
            top: 0.5rem;
            left: 0.6rem;
            color: #6b7280;
            pointer-events: none;
            transition: all 0.2s ease-in-out;
            background-color: white;
            padding: 0 0.25rem;
            font-size: 0.875rem;
        }

        .form-group .form-input:focus + .form-label,
        .form-group .form-input:not(:placeholder-shown) + .form-label {
            top: -0.6rem;
            left: 0.5rem;
            font-size: 0.75rem;
            color: #1f2937;
        }
    </style>
</head>
<body class="bg-gray-100 p-3 overflow-hidden">

    <div class="flex flex-col md:flex-row gap-4 w-full h-[calc(100vh-1.5rem)]">

        <div class="flex flex-col flex-[3]">
            <div class="panel bg-white rounded-lg shadow-sm border border-rolex-green p-3 flex flex-col flex-grow min-h-0">
                <div class="flex justify-between items-center mb-3 pb-2 border-b border-rolex-green">
                    <h2 class="text-lg font-semibold text-gray-800">Kullanıcı Listesi</h2>
                    <div class="relative">
                        <a asp-controller="Account" asp-action="Create" class="px-6 py-1.5 bg-success text-white text-sm font-semibold rounded-md hover:bg-opacity-90 shadow-sm">EKLE</a>
                        <input type="text" id="kullanici-ara" class="form-input text-xs w-40 p-1.5 pl-7 border border-rolex-green rounded-md focus:outline-none focus:ring-0 focus:border-black peer" placeholder="Kullanıcı Ara...">
                        <svg class="w-3.5 h-3.5 text-gray-400 absolute left-2 top-1/2 -translate-y-1/2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                    </div>
                </div>
                <div class="flex-grow overflow-y-auto">
                    <div class="grid grid-cols-3 text-xs font-semibold text-gray-500 px-2 py-1.5 border-b sticky top-0 bg-white z-10">
                        <span>Kullanıcı Adı</span>
                        <span class="text-center">Aktif</span>
                        <span class="text-right">İşlem</span>
                    </div>

                    <!-- LIST -->
                    @{
                        var rowIndex = 0;
                    }
                    <div id="kullanici-listesi" class="space-y-1">
                        @foreach (var item in Model)
                        {
                            var rowClass = (rowIndex++ % 2 == 1) ? "bg-list-item-bg" : "bg-white";

                            <div class="grid grid-cols-3 items-center gap-2 p-2 rounded hover:bg-gray-200 @rowClass">
                                <!-- Email -->
                                <span class="font-medium text-gray-700 text-sm truncate">
                                    @item.Email
                                </span>

                                <!-- Active Toggle (sadece görüntü) -->
                                <div class="flex justify-center">
                                    <div class="w-9 h-5 @(item.Active ? "bg-rolex-green" : "bg-gray-300") rounded-full relative transition-colors">
                                        <div class="w-4 h-4 bg-white rounded-full absolute top-[2px] @(item.Active ? "right-[2px]" : "left-[2px]") transition-all"></div>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="flex justify-end gap-2">
                                    <a href="/User/Update/@item.Id"
                                       class="w-8 h-8 inline-flex items-center justify-center rounded-md border border-gray-300 bg-white hover:bg-gray-50 text-gray-700 shadow-sm"
                                       title="Güncelle">
                                        <i class="fas fa-pen text-xs"></i>
                                    </a>

                                    <button type="button"
                                            class="w-8 h-8 inline-flex items-center justify-center rounded-md border border-red-200 bg-red-50 hover:bg-red-100 text-red-700 shadow-sm"
                                            title="Sil"
                                            data-id="@item.Id">
                                        <i class="fas fa-trash text-xs"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div id="toast-container" class="fixed bottom-4 right-4 z-50"></div>


</body>
</html>



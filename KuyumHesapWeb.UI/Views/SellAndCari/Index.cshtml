        function sanitizeNumericText(raw) {
          let s = (raw ?? "").toString().trim().replace(/[^\d,.\-]/g, "");
          s = s.replace(/(?!^)-/g, "");
          s = s.replace(/\./g, "");
          const firstComma = s.indexOf(",");
          if (firstComma !== -1) {

        function parseTrNumber(raw) {
          const s = sanitizeNumericText(raw);
          if (!s || s === "-" || s === ",") return 0;
          const normalized = s.replace(",", ".");
          const n = Number.parseFloat(normalized);
          return Number.isFinite(n) ? n : 0;

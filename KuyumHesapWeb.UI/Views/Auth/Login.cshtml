@using KuyumHesapWeb.Core.Feature.AuthFeature.Commands.Login
@model LoginCommandRequest

@{
    ViewData["Title"] = "Dashboard";
    Layout = "";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Girişi | KuyumHesap</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .rolex-green-border {
            border: 1px solid #4C9779;
        }

        .form-group .form-label {
            position: absolute;
            top: 0.8rem;
            left: 0.75rem;
            color: #6b7280;
            pointer-events: none;
            transition: all 0.2s ease-in-out;
            background-color: white;
            padding: 0 0.25rem;
        }

        .form-group .form-input:focus + .form-label,
        .form-group .form-input:not(:placeholder-shown) + .form-label {
            top: -0.7rem;
            left: 0.5rem;
            font-size: 0.75rem;
            color: #1f2937;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 52px;
            height: 28px;
        }

            .toggle-switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 28px;
        }

            .toggle-slider:before {
                position: absolute;
                content: "";
                height: 20px;
                width: 20px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: .4s;
                border-radius: 50%;
            }

        input:checked + .toggle-slider {
            background-color: #4C9779;
        }

            input:checked + .toggle-slider:before {
                transform: translateX(24px);
            }

        .api-status-badge {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
            }

            50% {
                opacity: .8;
            }
        }

        .api-info-box {
            transition: all 0.3s ease;
        }

            .api-info-box:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            }

        .system-info-box {
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .system-info-box:hover {
                transform: scale(1.02);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
                border-color: #4C9779;
            }
    </style>
</head>

<body class="bg-gray-100">

    <div class="flex flex-col lg:flex-row min-h-screen">

        <div class="w-full lg:w-1/2 bg-green-800 text-white flex flex-col justify-between p-12 lg:p-16 order-2 lg:order-1">
            <div>
                <div>
                    <h1 class="text-5xl md:text-6xl font-bold">Merhaba.</h1>
                    <h2 class="mt-4 text-2xl md:text-3xl font-light">
                        Yeni nesil kuyumcu programı <span class="font-semibold">KuyumHesap</span>'a hoş geldiniz.
                    </h2>
                    <div class="mt-12 border-l-4 border-green-400 pl-6">
                        <p class="text-lg md:text-xl font-semibold tracking-wider">EN YENİ TEKNOLOJİ, 20 YILLIK BİLGİ BİRİKİMİ.</p>
                        <p class="mt-4 text-gray-200 leading-relaxed">
                            Sahada edindiğimiz bilgi birikimi ile kuyumcuların ihtiyacını yerinde görerek tam sizin istediğiniz uygulama ile karşınızdayız.
                        </p>
                    </div>
                    <div class="mt-10">
                        <h3 class="text-lg font-bold text-green-300 uppercase tracking-wider">Her Yerden Erişin</h3>
                        <p class="mt-2 text-gray-200">
                            Ekstra güvenlik katmanları ve online sistem ile verilerinize her yerden güvenle erişebilirsiniz.
                        </p>
                    </div>
                </div>
            </div>

            <div>
                <div class="text-center mb-10">
                    <h3 class="text-lg font-bold text-green-300 uppercase tracking-wider mb-4">Bize Ulaşın</h3>
                    <div class="flex justify-center items-center space-x-6">
                        <a href="#" class="text-gray-300 hover:text-white transition-colors duration-300"><i class="fas fa-envelope fa-2x"></i></a>
                        <a href="#" class="text-gray-300 hover:text-white transition-colors duration-300"><i class="fab fa-instagram fa-2x"></i></a>
                        <a href="#" class="text-gray-300 hover:text-white transition-colors duration-300"><i class="fab fa-facebook fa-2x"></i></a>
                        <a href="#" class="text-gray-300 hover:text-white transition-colors duration-300"><i class="fas fa-phone fa-2x"></i></a>
                        <a href="#" class="text-gray-300 hover:text-white transition-colors duration-300"><i class="fab fa-linkedin fa-2x"></i></a>
                    </div>
                </div>
                <div id="resolution-note" class="text-center text-xs text-gray-300">
                    <p>
                        Bu uygulama daha iyi bir kullanım ve deneyim için en az 1920x1080 ekran çözünürlüğü gerektirmektedir.
                        <br>Sizin ekran çözünürlüğünüz: <span id="resolution-display" class="font-bold"></span><span id="resolution-icon" class="ml-1"></span>
                    </p>
                </div>
            </div>
        </div>
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />


        <div class="w-full lg:w-1/2 flex items-center justify-center p-8 bg-gray-50 order-1 lg:order-2 relative">
            <div class="w-full max-w-md p-8 space-y-8 bg-white rounded-xl shadow-lg rolex-green-border">
                <div class="text-center">
                    <i class="fas fa-user-circle text-5xl text-gray-400"></i>
                    <h2 class="mt-4 text-2xl font-bold text-gray-800">Kullanıcı Girişi</h2>
                    <p class="mt-2 text-sm text-gray-500">Lütfen bilgilerinizi giriniz</p>
                </div>

                <form asp-controller="Auth" asp-action="Login" method="post" class="space-y-6">
                    <div class="relative form-group">
                        <input asp-for="Email" type="text" required class="form-input w-full p-3 border rolex-green-border rounded-md shadow-sm focus:outline-none focus:border-black focus:ring-0 peer" placeholder=" ">
                        <label for="username" class="form-label">Email</label>
                    </div>
                    <div class="relative form-group">
                        <input asp-for="Password" type="password" required class="form-input w-full p-3 border rolex-green-border rounded-md shadow-sm focus:outline-none focus:border-black focus:ring-0 peer" placeholder=" ">
                        <label for="password" class="form-label">Şifre</label>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <label class="toggle-switch mr-2">
                                <input id="remember-me" type="checkbox">
                                <span class="toggle-slider"></span>
                            </label>
                            <label for="remember-me" class="block text-sm text-gray-900">Beni Hatırla</label>
                        </div>
                        <div class="text-sm">
                            <a href="#" class="font-medium text-green-600 hover:text-green-500">Şifrenizi mi unuttunuz?</a>
                        </div>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="text-sm text-center text-red-600 bg-red-100 p-3 rounded-md">
                            @Html.ValidationSummary(excludePropertyErrors: true)
                        </div>
                    }
                    <div>
                        <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" style="background-color: rgba(30, 132, 73, 0.9);">
                            Giriş Yap
                        </button>
                    </div>
                </form>



            </div>

        </div>
    </div>

</body>
</html>

